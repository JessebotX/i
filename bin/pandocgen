#!/bin/sh
#
# pandocgen - recursively traverse directories and convert any markdown
# files into html with pandoc
#
# DEPENDENCIES
# - pandoc
# - find

defaultifs=${IFS}

main() {
	# Usage: main "$@"
	# Program's entry point

	IFS=$(printf '\n\b')

	# This is fine because IFS is set properly
	# shellcheck disable=SC2044
	for i in $(find "${1:-.}"); do
		printf '%s\n' "${i}"
	done

	IFS=${defaultifs}
}

main "$@"
